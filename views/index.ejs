<%- include partials/hearder.ejs %>
<body>
  <%- include partials/navbar.ejs %>

  <div class="container">
    <hr />
    <h1>Perguntas - Respostas</h1>
    <hr />
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr />

    <% perguntas.forEach(pergunta => { %>
    <div class="card">
      <div class="card-body">
        <h3><%= pergunta.titulo %></h3>
        <h5 class="formataDate">
          <%= moment(pergunta.createdAt).format('DD/MM/YYYY HH:mm')+" hs" %>
        </h5>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= pergunta.id %>"
          ><button class="btn btn-primary">Responder</button></a
        >
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include partials/footer.ejs %>
